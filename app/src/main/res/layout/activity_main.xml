<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/data_class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/button_change_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:labelFor="@id/data_class_name" />

    <EditText
        android:id="@+id/data_class_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/button_change_value"
        android:importantForAutofill="no"
        android:inputType="text"
        android:labelFor="@+id/data_class_value" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_change_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:text="@string/button_change_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_change_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:text="@string/button_change_value" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>